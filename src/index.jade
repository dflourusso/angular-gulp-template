doctype html
html(lang="en" ng-app="angular-gulp-template")
  head
    title= 'Angular Gulp Template'
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")

    //- iOS app
    meta(name="apple-mobile-web-app-capable" content="yes")
    meta(name="apple-mobile-web-app-status-bar-style" content="black")

    link(rel="apple-touch-icon" href="assets/images/icon-57.png")
    link(rel="apple-touch-icon-precomposed" href="assets/images/icon-72.png")
    link(rel="apple-touch-startup-image" href="assets/images/icon-512.png")

    //- Android app
    meta(name="mobile-web-app-capable" content="yes")

    //- icon
    link(rel="icon" href="assets/images/favicon.png")

    // inject:css
    // endinject
  body
    .container(ng-view)

